{% block body %}
    <div class="container">
    {# <h2>Index</h2>
    <p class="important">
        Welcome on my awesome homepage.
    </p> #}

    <div class="row my-5">
        <div class="col-md-8 mx-auto">
        {% for message in app.flashes("success") %}
            <div class="alert alert-success">
                {{ message }}
                {# {{ app.flashes("success") }} #}
            </div>
        {% endfor %}
            <div class="card">
                <table class="table">
                    <thead>
                        <tr>
                            <th>ID</th>
                            <th>Choix</th>
                            <th>Delete</th>
                        </tr>
                    </thead>
                    <tbody>
                        {% for choice in choix %}
                            <tr>
                                <td scope="row">{{ choice.id }}</td>
                                <td>{{ choice.choix }}</td>
                                <td>
                                    <!-- Button trigger modal -->
                                    <button type="button" class="btn btn-danger" data-bs-toggle="modal" data-bs-target="#deleteModal">
                                        <i class="fa-solid fa-trash"></i>
                                        Delete choice
                                    </button>

                                    <a href="{{ path('app_choix.edit', {question_id : question_id, id : choice.id}) }}" class="btn btn-warning">
                                        Edit choice
                                        <i class="fa-solid fa-pen-to-square"></i>
                                    </a>
                                </td>
                            </tr>

                            <!-- Modal -->
                            <div class="modal fade" id="deleteModal" tabindex="-1" aria-labelledby="deleteModalLabel" aria-hidden="true">
                                <div class="modal-dialog">
                                    <div class="modal-content">
                                        <div class="modal-header">
                                            <h1 class="modal-title fs-5" id="deleteModalLabel">Do you want to delete the response choice ?</h1>
                                            <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                                        </div>
                                        <div class="modal-body">
                                            <p class="text-danger">The choice will be deleted !</p>
                                            <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                                            <a href="{{ path('app_choix.delete', {question_id : question_id, id : choice.id}) }}" class="btn btn-danger">
                                                Confirm
                                            </a>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        {% endfor %}
                    </tbody>
                </table>
                <a href="{{ path('app_choix.add', {question_id : question_id}) }}" class="btn btn-primary">
                    <i class="fa-solid fa-plus"></i>                
                    Add a response choice
                </a>
            </div>
        </div>
    </div>
{% endblock %}

