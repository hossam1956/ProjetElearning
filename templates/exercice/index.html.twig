{% extends 'base.html.twig' %}

{% block title %}Liste exercices{% endblock %}

{# {% block stylesheets %}
    <style type="text/css">
        body {
            background-color: #336699;
        }
    </style>
{% endblock %} #}

{% block body %}
    <div class="container">
        {# <h2>Index</h2>
        <p class="important">
            Welcome on my awesome homepage.
        </p> #}

        <div class="row my-5">
            <div class="col-md-8 mx-auto">
            {% for message in app.flashes("success") %}
                <div class="alert alert-success">
                    {{ message }}
                    {# {{ app.flashes("success") }} #}
                </div>
            {% endfor %}
                <div class="card">
                    <table class="table">
                        <thead>
                            <tr>
                                <th>ID</th>
                                <th>Titre</th>
                                <th>View</th>
                            </tr>
                        </thead>
                        <tbody>
                            {% for exercice in exercices %}
                                <tr>
                                    <td scope="row">{{ exercice.id }}</td>
                                    <td>{{ exercice.titre }}</td>
                                    <td>
                                        {% if app.user and app.user.getRole() == 'formateur' %} 
                                        <a href="{{ path('app_exercice.show', {id : exercice.id}) }}" class="btn btn-primary">
                                            Show exercise <i class="fa-regular fa-eye"></i>
                                        </a>
                                        {% endif %}
                                        <a href="{{ path('app_exercice.practice', {exercice_id : exercice.id}) }}" class="btn btn-info">
                                            <i class="fa-solid fa-book"></i>
                                            Take exercise 
                                        </a>
                                        {# {% if is_granted('ROLE_USER') %}
                                            {% if task.user.id == app.user.id %}
                                                <a href="{{ path('task_edit', {id : task.id}) }}" class="btn btn-warning">
                                                    <i class="fa-solid fa-pen-to-square"></i>
                                                </a>
                                                <a href="{{ path('task_delete', {id : task.id}) }}" class="btn btn-danger">
                                                    <i class="fa-solid fa-trash"></i>
                                                </a>
                                            {% endif %}
                                        {% endif %} #}
                                    </td>
                                </tr>
                            {% endfor %}
                        </tbody>
                    </table>
                    {% if app.user and app.user.getRole() == 'formateur' %}
                    <a href="{{ path('app_exercice.add') }}" class="btn btn-primary">
                        <i class="fa-solid fa-plus"></i>                
                        Add an exercise
                    </a>
                    {% endif %}
                </div>
            </div>
        </div>
    </div>
{% endblock %}

