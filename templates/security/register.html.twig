{% extends 'base.html.twig' %}

{% block title %}Hello Register!{% endblock %}
{% block stylesheets %} {{parent()}} {% endblock %}
{% block javascripts %} {{parent()}} {% endblock %}
{% block navabar %}
{{parent()}}
{% endblock %}
{% block body %}
<style>
    .bg-image-vertical {
            position: relative;
            overflow: hidden;
            background-repeat: no-repeat;
            background-position: right center;
            background-size: auto 100%;
        }

    @media (min-width: 1025px) {
        .h-custom-2 {
            height: 100%;
        }
        }
</style>
<section class="vh-100 mb-5 ">
    <div class="container-fluid">
      <div class="row">
        <div class="col-sm-6 text-black">
            

  
          <div class="d-flex align-items-center h-custom-1 px-5 ms-xl-4 mt-5 pt-5 pt-xl-0 mt-xl-n4 ">
  
            {{ form_start(form) }}
                
              <h3 class="fw-normal mb-3 pb-3" style="letter-spacing: 1px;">Inscription</h3>
                
              <div class="form-outline mb-4">
                {{ form_label(form.nom) }}
                {{ form_widget(form.nom, {'attr': {'class': 'form-control'}}) }}
              </div>
              <div class="form-outline mb-4">
                {{ form_label(form.prenom) }}
                {{ form_widget(form.prenom, {'attr': {'class': 'form-control'}}) }}
              </div>
              <div class="form-outline mb-4">
                {{ form_label(form.email) }}
                {{ form_widget(form.email, {'attr': {'class': 'form-control'}}) }}
              </div>
              <div class="form-outline mb-4">
                {{ form_label(form.password.first) }}
                {{ form_widget(form.password.first, {'attr': {'class': 'form-control'}}) }}
              </div>
              <div class="form-outline mb-4">
                {{ form_label(form.password.second) }}
                {{ form_widget(form.password.second, {'attr': {'class': 'form-control'}}) }}
              </div>
              <div class="form-outline mb-4">
                {{ form_label(form.role) }}
                {{ form_widget(form.role, {'attr': {'class': 'form-check-input'}}) }}
              </div>
              <div class="form-outline mb-4">
                {{ form_label(form.photo) }}
                {{ form_widget(form.photo, {'attr': {'class': 'form-control-file'}}) }}
              </div>
              
   
              <div class="pt-1 mb-4">
                <button class="btn btn-lg btn-block btn-dark mb-5" type="submit">
                    S'inscrire
                </button>
              </div>
            
             
  
              {{ form_end(form) }}
  
          </div>
  
        </div>
        <div class="col-sm-6 px-0 d-none d-sm-block">
          <img src="https://cdn.glitch.global/954faddc-7b28-4010-80c3-c42f104147ea/code-g7170e9d91_640.jpg?v=1691064768091"
            alt="Login image" class="w-100 vh-100" style="object-fit: cover; object-position: left;">
        </div>
      </div>
    </div>
  </section>
  
{% endblock %}

