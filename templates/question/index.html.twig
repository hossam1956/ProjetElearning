                                                </a>
                                                <a href="{{ path('task_delete', {id : task.id}) }}" class="btn btn-danger">
                                                    <i class="fa-solid fa-trash"></i>
                                                </a>
                                            {% endif %}
                                        {% endif %} #}
                                    </td>
                                </tr>
                            {% endfor %}
                        </tbody>
                    </table>
                    <a href="{{ path('app_question.add', {exercice_id : exercice_id}) }}" class="btn btn-primary">
                        <i class="fa-solid fa-plus"></i>                
                        Add a question
                    </a>
                </div>
            </div>
        </div>
    </div>
{% endblock %}

